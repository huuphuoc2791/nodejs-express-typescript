{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./src"
    },
    "exclude": [
        "node_modules",
        "build",
        "config"
    ],
    "include": [
        "./src/**/*"
    ]
}